{
	"compilerOptions": {
		"declaration": true,
		"strictNullChecks": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"resolveJsonModule": true,
		"noUnusedParameters": true,
		"noUnusedLocals": true,
		"noImplicitAny": true,
		"target": "esnext",
		"lib": [
			"dom",
			"es2016",
			"es2017",
			"es2018",
			"es2019",
			"es2020",
			"es2021"
		]
	},
	"include": [
        "src/**/*"
    ],
	"exclude": [
		"node_modules",
		"lib",
		"es"
	]
}